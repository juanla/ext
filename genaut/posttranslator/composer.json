{
    "name": "genaut/posttranslator",
    "type": "phpbb-extension",
    "description": "Add a Translate post link in each message that translates the desired text",
    "homepage": "https://juanjavierrg.com/post_translator_for_phpbb/",
    "version": "1.0.0-dev",
    "time": "2024-03-31",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Juan R",
            "email": "juanjavierrg@gmail.com",
            "homepage": "https://juanjavierrg.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "phing/phing": "2.17.4"
    },
    "extra": {
        "display-name": "Post Translator",
        "soft-require": {
            "phpbb/phpbb": ">=3.3.0,<4.0.0@dev"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
